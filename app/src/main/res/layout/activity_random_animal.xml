<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.RandomAnimalActivity">

    <ImageView
        android:id="@+id/ivAnimal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/bakso" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold"
        tools:text="Random Animal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginVertical="@dimen/margin_medium"
        android:text="@string/random_animal_fact"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_medium" />

    <TextView
        android:id="@+id/tvLatinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginVertical="@dimen/margin_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_medium"
        tools:text="Latin Name = Panthera leo" />

    <TextView
        android:id="@+id/tvAnimalType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginVertical="@dimen/margin_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_medium"
        tools:text="Animal Type = Mammals" />

    <TextView
        android:id="@+id/tvHabitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginVertical="@dimen/margin_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_medium"
        tools:text="Habitat = Savannah, woodland, and desert" />

</LinearLayout>